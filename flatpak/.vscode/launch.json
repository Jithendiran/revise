{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Flatpak (gdbserver)",
      "type": "cppdbg",
      "request": "launch",
      "program": "/tmp/build-dir/files/bin/factorial",
      "miDebuggerServerAddress": ":12345",
      "miDebuggerPath": "/usr/bin/gdb",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "preLaunchTask": "Run Flatpak with gdbserver",
      "logging": {
        "engineLogging": true
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "postRemoteConnectCommands": [
         {
          "description": "Load debug symbols",
          "text": "symbol-file /tmp/build-dir/files/lib/debug/bin/factorial.debug"
        },
        {
          "description": "Set source directory",
          "text": "dir ${workspaceFolder}/src"
        }
      ],
      "stopAtEntry": false
    }
  ]
}